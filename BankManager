import java.swing.*;
import java.awt.event.*;
import java.util.*;

public class BankManager {
    private JFrame frame;
    private JButton transferButton; // 계좌 이체 버튼
    private JButton depositButton; // 입금 버튼
    private JButton withdrawButton; // 출금 버튼
    private JButton displayAccountsButton; // 계좌 조회 버튼
    private JButton exitButton; // 종료 버튼
    private JButton loginButton; //로그인 버튼
    private JLabel welcomelabel; //CNU BANK ATM 문구
    private JLabel imageLabel; //이미지 라벨
    public BankManager() {
        accounts = new ArrayList<>();
        frame = new JFrame("ATM GUI");
        transferButton = new JButton("계좌 이체");
        depositButton = new JButton("입금");
        withdrawButton = new JButton("출금");
        displayAccountsButton = new JButton("계좌 조회");
        exitButton = new JButton("종료");
        loginButton = new JButton("로그인");
        welcomelabel = new JLabel("CNU BANK ATM");

        transferButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                transfer();
            }
        });

        depositButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                deposit();
            }
        });

        withdrawButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                withdraw();
            }
        });

        displayAccountsButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                displayAccounts();
            }
        });

        exitButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                System.exit(0);
            }
        });
        
        loginButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                login();
            }
        });

       


        JPanel pL = new JPanel(); //왼쪽 패널
        pL.setLayouut(new GridLayout(3, 1));
        pL.add(displayAccountsButton);
        pL.add(transferButton);
        pL.add(loginButton);

        JPanel pR = new JPanel(); //오른쪽 패널
        pP.setLayout(new GridLayout(3, 1));
        pL.add(depositButton);
        pL.add(withdrawButton);
        pL.add(exitButton);

        Jpanel PC = new JPanel(); //중앙 패널
        ImageIcon icon = new ImageIcon("충남대로고.png");
        imageLabel = new JLabel(icon);
        PC.add(imageLabel);

        frame.setSize(400, 200);
        frame.setTitle("ATM GUI");
        framesetLayout(new BorderLayout());
        frame.add(welcomelabel, BorderLayout.NORTH);
        frame.add(pL, BorderLayout.WEST);
        frame.add(pR, BorderLayout.EAST);   
        frame.add(PC, BorderLayout.CENTER);
        
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setVisible(true);
    }
    public static void main(String[] args) {
        new BankManager();
    }